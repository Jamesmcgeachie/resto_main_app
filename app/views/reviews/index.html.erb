<h1> Reviews for <%= @restaurant.name %></h1>

<%= form_tag "/restaurants/#{@restaurant.id}/reviews", method: :get, remote: true do %>
	Enter Review:
	<%= text_field_tag :query %>
	<%= submit_tag "Add Review" %>
<% end %>

<table class ="table" class="table-striped" border="1">
<tr>
<td>Review time</td>
<td>Review</td>
</tr>
<% @reviews.each do |review| %>
<tr>
<td>
	<%= review.created_at %>
</td>
<td>
	<%= review.review_text %>
</td>
</tr>

<% end %>
</table>

