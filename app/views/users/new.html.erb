<h1>Sign up</h1>

<% if @user.errors.messages.any? %>
	<% @user.errors.full_messages.each do |message| %>
	<p><%= message %></p>p>
	<% end %>
<% end %>

<%= form_for(@user) do |f| %>

<p>
	Email: <br/>
	<%= f.text_field :email %>
	</p>

	<p>
	Password: <br/>
	<%= f.password_field :password %>
	</p>

	<p>
	Password Confirmation: <br/>
	<%= f.password_field :password_confirmation %>
	</p>

<p>
<%= f.submit "Sign Up" %>

<% end %>