<h1><%= @cuisine_type.name %> Restaurants</h1>

<table class ="table" class="table-striped" border="1">
	<tr>
	<td>Restaurant name:</td>
	<td>Capacity</td>
	</tr>
<% @cuisine_type.restaurants.order(name: :asc).each do |restaurant| %>
	<tr>
	<td>
	<a href="/restaurants/<%= restaurant.id %>">
	<%= restaurant.name %></td>
	</a>
	<td><%= restaurant.capacity %></td>
	<td><%= image_tag restaurant.photo.thumb %></td>
	</tr>

<% end %>
	</table>